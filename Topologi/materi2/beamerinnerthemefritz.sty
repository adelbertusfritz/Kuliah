\defbeamertemplate*{title page}{fritz}[1][]
{
    \begin{tikzpicture}[overlay, remember picture]
        \node[inner sep=0pt,outer sep=0pt,anchor=north east] at (current page.north east)
        {\includegraphics[width=\the\paperwidth,height=\the\paperheight]{\wallpaper}};
    \end{tikzpicture}
    \vskip2cm%
    %% "title page header"  defines the loaded colors.

    \begin{beamercolorbox}[center,sep=8pt,#1]{title page header}
        \usebeamerfont{title}\textcolor{white}{\huge\inserttitle \\ \large\insertsubtitle}
    \end{beamercolorbox}%


    \vskip0.75cm%

    \begin{beamercolorbox}[center, wd=12cm,#1]{author}
        \usebeamerfont{author}\textcolor{white}{\insertauthor}%
    \end{beamercolorbox}
    
    \vfill
}

